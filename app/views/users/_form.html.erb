<%= render 'shared/errors', obj: @user %>

<%= form_for @user do |f| %>
  <div class="row">
    <div class="form-group">
      <div class="control-label col-sm-2 move">
        <%= f.label :username %>
      </div>

      <div class="col-sm-8 move">
        <%= f.text_field :username, class: "form-control", placeholder: "Enter username", autofocus: true %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :email %>
      </div>
      <div class="col-sm-8">
        <%= f.email_field :email, class: "form-control", placeholder: "Enter email" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :password %>
      </div>
      <div class="col-sm-8">
        <%= f.password_field :password, class: "form-control", placeholder: "Enter password" %>
      </div>
    </div>
  </div>

  <div class="row style-buttons" >
    <div class="col-sm-2">
    </div>
    <div class="form-group">
      <div class="col-sm-2">
        <%= f.submit(@user.new_record? ? "Sign up" : "Update account", class: 'btn btn-primary btn-lg') %>
      </div>
    </div>
  </div>
  <% end %>
</div>

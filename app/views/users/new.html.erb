<h1>Signup for Alpha Blog</h1>

<%= render 'shared/errors', obj: @user %>

<!-- <div class="row">
  <div class="col-xs-12"> -->
    <%= form_for @user do |f| %>
    <div class="row">
      <div class="form-group">
        <div class="control-label col-sm-2 move">
          <%= f.label :username %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-6 move">
          <%= f.text_field :username, class: "form-control", placeholder: "Enter username", autofocus: true %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :email %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-6">
          <%= f.email_field :email, class: "form-control", placeholder: "Enter email" %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :password %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-6">
          <%= f.password_field :password, class: "form-control", placeholder: "Enter password" %>
        </div>
      </div>
    </div>

    <div class="row style-buttons" >
      <div class="col-sm-2">
      </div>
      <div class="form-group">
        <div class="col-sm-2">
          <%= f.submit "Sign up", class: 'btn btn-primary btn-lg' %>
        </div>
        <div class="col-sm-2">
        </div
        <div class="col-sm-2 back">
          <%= link_to "Return to Articles", articles_path, class: "btn btn-danger btn-lg" %>
        </div>
      </div>
    </div>


    <% end %>

</div>

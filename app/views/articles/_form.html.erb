<% if @article.errors.any? %>
<h3 class="error-msg-title">The following errors prevented the article from getting created:</h3>
<ul>
  <% @article.errors.full_messages.each do |msg| %>
  <li><%=msg %></li>
  <% end %>
</ul>
<% end %>
<!-- <div class="row">
  <div class="col-xs-12"> -->
    <%= form_for @article do |f| %>
    <div class="row">
      <div class="form-group">
        <div class="control-label col-sm-2 move">
          <%= f.label :title %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-6 move">
          <%= f.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :description %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-6">
          <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Body of Article" %>
        </div>
      </div>
    </div>

    <div class="row style-buttons" >
      <div class="col-sm-2">
      </div>
      <div class="form-group">
        <div class="col-sm-2">
          <%= f.submit class: 'btn btn-primary btn-lg' %>
        </div>
        <div class="col-sm-2">
        </div
        <div class="col-sm-2 back">
          <%= link_to "Return to Articles", articles_path, class: "btn btn-danger btn-lg" %>
        </div>
      </div>
    </div>


    <% end %>

</div>
